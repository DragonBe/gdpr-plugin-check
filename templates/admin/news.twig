{% extends 'base.twig' %}

{% block title %}News and updates{% endblock %}
{% block subtitle %}Let the world hear from you{% endblock %}

{% block content %}

    <div class="row">

        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">

            <form class="form" action="/admin/news" method="post">

                <div class="form-group">
                    <label for="news-title">Title</label>
                    <input type="text" name="title" id="news-title" class="form-control" value="{{ news.title }}">
                </div>

                <div class="form-group">
                    <label for="news-article">Article contents</label>
                    <textarea name="article" id="news-article" class="form-control" style="min-height: 250px;">{{ news.article }}</textarea>
                </div>

                <input type="hidden" name="id" id="news-id" value="{{ news.id }}">
                <input type="hidden" name="author" id="news-author" value="{{ news.author }}">


                <input type="submit" class="btn btn-success" value="Publish"> <a href="/admin/news" class="btn btn-default">Cancel</a>


            </form>

        </div>
        <div class="col-md-3">&nbsp;</div>

    </div>

{% endblock %}